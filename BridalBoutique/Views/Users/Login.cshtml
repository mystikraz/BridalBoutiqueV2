@model BridalBoutique.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


<span>@ViewBag.ErrorMessage</span>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <br />
            <div class="panel panel-primary">
                <div class="panel-heading ">
                    <h3><span class="glyphicon glyphicon-lock"></span>  Log In</h3>
                </div>
                <div class="panel-body" style="background-color:#d9edf7; color:#F56236;">
                    <p class="lead" style="color:#F56236;">
                        Please log in to access the administration area:
                    </p>

                        @using (Html.BeginForm("Login", "Users"))
                        {
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label>User Name:</label>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    }
                </div>
            </div>

            <a href="@Url.Action("List", "Product")"><span class="glyphicon glyphicon-arrow-left"> Home</span></a>

        </div>
        <div class="col-md-8">
            <br /> <br />

            <hr>
            <div class="alert alert-info col-md-6">
                <strong><span class="glyphicon glyphicon-lock" style="margin-bottom: 12px; color:#F56236;"></span>&nbsp;&nbsp;LOGIN DETAILS FOR TESTING:</strong></br>
                &nbsp;&nbsp;<strong>(ADMIN)</strong> Username: <b style="color:#F56236;">admin</b>
                <br /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Password:&nbsp; <b>thisisTest8#</b>
                <br>

            </div>

        </div>
    </div>

</div>

